<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN" "http://www.ibatis.com/dtd/sql-map-2.dtd">

<sqlMap namespace="Comtnorgnztinfo">
	
	<typeAlias  alias="egovMap" type="egovframework.rte.psl.dataaccess.util.EgovMap"/>
	<typeAlias  alias="ComtnorgnztinfoVO" type="kr.godsoft.egovframe.generatorwebapp.comtnorgnztinfo.service.ComtnorgnztinfoVO"/>
	
	<resultMap id="comtnorgnztinfo" class="kr.godsoft.egovframe.generatorwebapp.comtnorgnztinfo.service.ComtnorgnztinfoVO">
		<result property="orgnztId" column="orgnzt_id" columnIndex="1"/>
		<result property="orgnztNm" column="orgnzt_nm" columnIndex="2"/>
		<result property="orgnztDc" column="orgnzt_dc" columnIndex="3"/>
	</resultMap>
	
	<insert id="comtnorgnztinfoDAO.insertComtnorgnztinfo_S">
		<![CDATA[
            INSERT INTO comtnorgnztinfo (
                orgnzt_id
                , orgnzt_nm
                , orgnzt_dc
            ) VALUES (
                #orgnztId#
                , #orgnztNm#
                , #orgnztDc#
            )
		]]>
	</insert>
	
	<update id="comtnorgnztinfoDAO.updateComtnorgnztinfo_S">
		<![CDATA[
            UPDATE comtnorgnztinfo
                SET
                orgnzt_id = #orgnztId#
                , orgnzt_nm = #orgnztNm#
                , orgnzt_dc = #orgnztDc#
                WHERE 1 = 1
                AND orgnzt_id = #orgnztId#
		]]>
	</update>
	
	<delete id="comtnorgnztinfoDAO.deleteComtnorgnztinfo_S">
		<![CDATA[
			DELETE FROM comtnorgnztinfo
				WHERE 1 = 1
				AND orgnzt_id = #orgnztId#
		]]>
	</delete>
	
	<select id="comtnorgnztinfoDAO.selectComtnorgnztinfo_S" resultMap="comtnorgnztinfo">
		<![CDATA[
			SELECT
				orgnzt_id
				, orgnzt_nm
				, orgnzt_dc
			FROM COMTNORGNZTINFO
			WHERE orgnzt_id = #orgnztId#
		]]>
	</select>
	
	<select id="comtnorgnztinfoDAO.selectComtnorgnztinfoList_D" parameterClass="ComtnorgnztinfoVO" resultClass="egovMap">
	       SELECT 
								A.ORGNZT_ID
								, A.ORGNZT_NM
								, A.ORGNZT_DC
			       FROM
            (
				SELECT
								ORGNZT_ID
								, ORGNZT_NM
								, ORGNZT_DC
							, ROWNUM
				FROM COMTNORGNZTINFO
				WHERE 1=1
				<isEqual prepend="AND" property="searchCondition" compareValue="0">
					ORGNZT_ID = #searchKeyword#
				</isEqual>
					<isEqual prepend="AND" property="searchCondition" compareValue="1">
					ORGNZT_NM LIKE '%' || #searchKeyword# || '%'
				</isEqual>
						ORDER BY 
							ORGNZT_ID DESC
					) A
			WHERE ROWNUM BETWEEN #firstIndex# AND #recordCountPerPage#
	</select>

	<select id="comtnorgnztinfoDAO.selectComtnorgnztinfoListTotCnt_S" parameterClass="ComtnorgnztinfoVO" resultClass="int">
			SELECT COUNT(*) totcnt
			FROM COMTNORGNZTINFO
			WHERE 1=1
			<isEqual prepend="AND" property="searchCondition" compareValue="0">
				ORGNZT_ID = #searchKeyword#
			</isEqual>
				<isEqual prepend="AND" property="searchCondition" compareValue="1">
				ORGNZT_NM LIKE '%' || #searchKeyword# || '%'
			</isEqual>
		</select>

</sqlMap>
