<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN" "http://www.ibatis.com/dtd/sql-map-2.dtd">

<sqlMap namespace="Comvnusermaster">
	
	<typeAlias  alias="egovMap" type="egovframework.rte.psl.dataaccess.util.EgovMap"/>
	<typeAlias  alias="ComvnusermasterVO" type="kr.godsoft.egovframe.generatorwebapp.comvnusermaster.service.ComvnusermasterVO"/>
	
	<resultMap id="comvnusermaster" class="kr.godsoft.egovframe.generatorwebapp.comvnusermaster.service.ComvnusermasterVO">
		<result property="esntlId" column="esntl_id" columnIndex="1"/>
		<result property="userId" column="user_id" columnIndex="2"/>
		<result property="password" column="password" columnIndex="3"/>
		<result property="userNm" column="user_nm" columnIndex="4"/>
		<result property="userZip" column="user_zip" columnIndex="5"/>
		<result property="userAdres" column="user_adres" columnIndex="6"/>
		<result property="userEmail" column="user_email" columnIndex="7"/>
		<result property="groupId" column="group_id" columnIndex="8"/>
		<result property="userSe" column="user_se" columnIndex="9"/>
		<result property="orgnztId" column="orgnzt_id" columnIndex="10"/>
	</resultMap>
	
	<insert id="comvnusermasterDAO.insertComvnusermaster_S">
		<![CDATA[
            INSERT INTO comvnusermaster (
                esntl_id
                , user_id
                , password
                , user_nm
                , user_zip
                , user_adres
                , user_email
                , group_id
                , user_se
                , orgnzt_id
            ) VALUES (
                #esntlId#
                , #userId#
                , #password#
                , #userNm#
                , #userZip#
                , #userAdres#
                , #userEmail#
                , #groupId#
                , #userSe#
                , #orgnztId#
            )
		]]>
	</insert>
	
	<update id="comvnusermasterDAO.updateComvnusermaster_S">
		<![CDATA[
            UPDATE comvnusermaster
                SET
                esntl_id = #esntlId#
                , user_id = #userId#
                , password = #password#
                , user_nm = #userNm#
                , user_zip = #userZip#
                , user_adres = #userAdres#
                , user_email = #userEmail#
                , group_id = #groupId#
                , user_se = #userSe#
                , orgnzt_id = #orgnztId#
                WHERE 1 = 1

		]]>
	</update>
	
	<delete id="comvnusermasterDAO.deleteComvnusermaster_S">
		<![CDATA[
			DELETE FROM comvnusermaster
				WHERE 1 = 1
		]]>
	</delete>
	
	<select id="comvnusermasterDAO.selectComvnusermaster_S" resultMap="comvnusermaster">
		<![CDATA[
			SELECT
				esntl_id
				, user_id
				, password
				, user_nm
				, user_zip
				, user_adres
				, user_email
				, group_id
				, user_se
				, orgnzt_id
			FROM COMVNUSERMASTER
		]]>
	</select>
	
	<select id="comvnusermasterDAO.selectComvnusermasterList_D" parameterClass="ComvnusermasterVO" resultClass="egovMap">
	       SELECT 
								A.ESNTL_ID
								, A.USER_ID
								, A.PASSWORD
								, A.USER_NM
								, A.USER_ZIP
								, A.USER_ADRES
								, A.USER_EMAIL
								, A.GROUP_ID
								, A.USER_SE
								, A.ORGNZT_ID
			       FROM
            (
				SELECT
								ESNTL_ID
								, USER_ID
								, PASSWORD
								, USER_NM
								, USER_ZIP
								, USER_ADRES
								, USER_EMAIL
								, GROUP_ID
								, USER_SE
								, ORGNZT_ID
							, ROWNUM
				FROM COMVNUSERMASTER
				WHERE 1=1
				<isEqual prepend="AND" property="searchCondition" compareValue="0">
					ESNTL_ID = #searchKeyword#
				</isEqual>
					<isEqual prepend="AND" property="searchCondition" compareValue="1">
					USER_ID LIKE '%' || #searchKeyword# || '%'
				</isEqual>
						ORDER BY 
					) A
			WHERE ROWNUM BETWEEN #firstIndex# AND #recordCountPerPage#
	</select>

	<select id="comvnusermasterDAO.selectComvnusermasterListTotCnt_S" parameterClass="ComvnusermasterVO" resultClass="int">
			SELECT COUNT(*) totcnt
			FROM COMVNUSERMASTER
			WHERE 1=1
			<isEqual prepend="AND" property="searchCondition" compareValue="0">
				ESNTL_ID = #searchKeyword#
			</isEqual>
				<isEqual prepend="AND" property="searchCondition" compareValue="1">
				USER_ID LIKE '%' || #searchKeyword# || '%'
			</isEqual>
		</select>

</sqlMap>
