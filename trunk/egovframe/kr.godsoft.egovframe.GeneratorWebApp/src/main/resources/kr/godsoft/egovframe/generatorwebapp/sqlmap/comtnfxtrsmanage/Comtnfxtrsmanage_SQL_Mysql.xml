<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN" "http://www.ibatis.com/dtd/sql-map-2.dtd">

<sqlMap namespace="Comtnfxtrsmanage">
	
	<typeAlias  alias="egovMap" type="egovframework.rte.psl.dataaccess.util.EgovMap"/>
	<typeAlias  alias="ComtnfxtrsmanageVO" type="kr.godsoft.egovframe.generatorwebapp.comtnfxtrsmanage.service.ComtnfxtrsmanageVO"/>
	
	<resultMap id="comtnfxtrsmanage" class="kr.godsoft.egovframe.generatorwebapp.comtnfxtrsmanage.service.ComtnfxtrsmanageVO">
		<result property="fxtrsCode" column="fxtrs_code" columnIndex="1"/>
		<result property="fxtrsNm" column="fxtrs_nm" columnIndex="2"/>
		<result property="makrNm" column="makr_nm" columnIndex="3"/>
		<result property="price" column="price" columnIndex="4"/>
	</resultMap>
	
	<insert id="comtnfxtrsmanageDAO.insertComtnfxtrsmanage_S">
		<![CDATA[
			INSERT INTO comtnfxtrsmanage 
				( FXTRS_CODE
				  , fxtrs_nm
				  , makr_nm
				  , price )
			VALUES ( #fxtrsCode#
				  , #fxtrsNm#
				  , #makrNm#
				  , #price# )
		]]>
	</insert>
	
	<update id="comtnfxtrsmanageDAO.updateComtnfxtrsmanage_S">
		<![CDATA[
			UPDATE comtnfxtrsmanage
			SET fxtrs_code = #fxtrsCode#
				, fxtrs_nm = #fxtrsNm#
				, makr_nm = #makrNm#
				, price = #price#
			WHERE fxtrs_code = #fxtrsCode#
		]]>
	</update>
	
	<delete id="comtnfxtrsmanageDAO.deleteComtnfxtrsmanage_S">
		<![CDATA[
			DELETE FROM comtnfxtrsmanage 
			WHERE fxtrs_code = #fxtrsCode#
		]]>
	</delete>
	
	<select id="comtnfxtrsmanageDAO.selectComtnfxtrsmanage_S" resultMap="comtnfxtrsmanage">
		<![CDATA[
			SELECT
				fxtrs_code
				, fxtrs_nm
				, makr_nm
				, price
			FROM comtnfxtrsmanage
			WHERE fxtrs_code = #fxtrsCode#
		]]>
	</select>
	
	<select id="comtnfxtrsmanageDAO.selectComtnfxtrsmanageList_D" parameterClass="ComtnfxtrsmanageVO" resultClass="egovMap">
			SELECT
								fxtrs_code
								, fxtrs_nm
								, makr_nm
								, price
					FROM comtnfxtrsmanage
			WHERE 1=1
			<isEqual prepend="AND" property="searchCondition" compareValue="0">
				fxtrs_code = #searchKeyword#
			</isEqual>
			<isEqual prepend="AND" property="searchCondition" compareValue="1">
				fxtrs_nm LIKE CONCAT('%',#searchKeyword#,'%')
			</isEqual>
				ORDER BY 
							fxtrs_code DESC
					limit #firstIndex#, #recordCountPerPage#	
	</select>

	<select id="comtnfxtrsmanageDAO.selectComtnfxtrsmanageListTotCnt_S" parameterClass="ComtnfxtrsmanageVO" resultClass="int">
			SELECT COUNT(*) totcnt
			FROM comtnfxtrsmanage
			WHERE 1=1
			<isEqual prepend="AND" property="searchCondition" compareValue="0">
				fxtrs_code = #searchKeyword#
			</isEqual>
			<isEqual prepend="AND" property="searchCondition" compareValue="1">
				fxtrs_nm LIKE CONCAT('%',#searchKeyword#,'%')
			</isEqual>
	</select>

</sqlMap>
