<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN" "http://www.ibatis.com/dtd/sql-map-2.dtd">

<sqlMap namespace="Ids">
	
	<typeAlias  alias="egovMap" type="egovframework.rte.psl.dataaccess.util.EgovMap"/>
	<typeAlias  alias="IdsVO" type="kr.godsoft.egovframe.generatorwebapp.ids.service.IdsVO"/>
	
	<resultMap id="ids" class="kr.godsoft.egovframe.generatorwebapp.ids.service.IdsVO">
		<result property="tableName" column="table_name" columnIndex="1"/>
		<result property="nextId" column="next_id" columnIndex="2"/>
	</resultMap>
	
	<insert id="idsDAO.insertIds_S">
		<![CDATA[
            INSERT INTO ids (
                table_name
                , next_id
            ) VALUES (
                #tableName#
                , #nextId#
            )
		]]>
	</insert>
	
	<update id="idsDAO.updateIds_S">
		<![CDATA[
            UPDATE ids
                SET
                table_name = #tableName#
                , next_id = #nextId#
                WHERE 1 = 1
                AND table_name = #tableName#
		]]>
	</update>
	
	<delete id="idsDAO.deleteIds_S">
		<![CDATA[
			DELETE FROM ids
				WHERE 1 = 1
				AND table_name = #tableName#
		]]>
	</delete>
	
	<select id="idsDAO.selectIds_S" resultMap="ids">
		<![CDATA[
			SELECT
				table_name
				, next_id
			FROM ids
			WHERE table_name = #tableName#
		]]>
	</select>
	
	<select id="idsDAO.selectIdsList_D" parameterClass="IdsVO" resultClass="egovMap">
			SELECT
								table_name
								, next_id
					FROM ids
			WHERE 1=1
			<isEqual prepend="AND" property="searchCondition" compareValue="0">
				table_name = #searchKeyword#
			</isEqual>
			<isEqual prepend="AND" property="searchCondition" compareValue="1">
				next_id LIKE CONCAT('%',#searchKeyword#,'%')
			</isEqual>
				ORDER BY 
							table_name DESC
					limit #firstIndex#, #recordCountPerPage#	
	</select>

	<select id="idsDAO.selectIdsListTotCnt_S" parameterClass="IdsVO" resultClass="int">
			SELECT COUNT(*) totcnt
			FROM ids
			WHERE 1=1
			<isEqual prepend="AND" property="searchCondition" compareValue="0">
				table_name = #searchKeyword#
			</isEqual>
			<isEqual prepend="AND" property="searchCondition" compareValue="1">
				next_id LIKE CONCAT('%',#searchKeyword#,'%')
			</isEqual>
	</select>

</sqlMap>
