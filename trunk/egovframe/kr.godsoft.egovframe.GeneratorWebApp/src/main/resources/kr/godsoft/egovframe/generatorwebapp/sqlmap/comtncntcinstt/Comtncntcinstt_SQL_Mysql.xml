<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN" "http://www.ibatis.com/dtd/sql-map-2.dtd">

<sqlMap namespace="Comtncntcinstt">
	
	<typeAlias  alias="egovMap" type="egovframework.rte.psl.dataaccess.util.EgovMap"/>
	<typeAlias  alias="ComtncntcinsttVO" type="kr.godsoft.egovframe.generatorwebapp.comtncntcinstt.service.ComtncntcinsttVO"/>
	
	<resultMap id="comtncntcinstt" class="kr.godsoft.egovframe.generatorwebapp.comtncntcinstt.service.ComtncntcinsttVO">
		<result property="insttId" column="instt_id" columnIndex="1"/>
		<result property="insttNm" column="instt_nm" columnIndex="2"/>
		<result property="frstRegisterId" column="frst_register_id" columnIndex="3"/>
		<result property="lastUpdusrId" column="last_updusr_id" columnIndex="4"/>
		<result property="frstRegistPnttm" column="frst_regist_pnttm" columnIndex="5"/>
		<result property="lastUpdtPnttm" column="last_updt_pnttm" columnIndex="6"/>
		<result property="useAt" column="use_at" columnIndex="7"/>
	</resultMap>
	
	<insert id="comtncntcinsttDAO.insertComtncntcinstt_S">
		<![CDATA[
            INSERT INTO comtncntcinstt (
                instt_id
                , instt_nm
                , frst_register_id
                , frst_regist_pnttm
                , use_at
            ) VALUES (
                #insttId#
                , #insttNm#
                , #frstRegisterId#
                , SYSDATE()
                , #useAt#
            )
		]]>
	</insert>
	
	<update id="comtncntcinsttDAO.updateComtncntcinstt_S">
		<![CDATA[
            UPDATE comtncntcinstt
                SET
                instt_id = #insttId#
                , instt_nm = #insttNm#
                , last_updusr_id = #lastUpdusrId#
                , last_updt_pnttm = SYSDATE()
                , use_at = #useAt#
                WHERE 1 = 1
                AND instt_id = #insttId#
		]]>
	</update>
	
	<delete id="comtncntcinsttDAO.deleteComtncntcinstt_S">
		<![CDATA[
			DELETE FROM comtncntcinstt
				WHERE 1 = 1
				AND instt_id = #insttId#
		]]>
	</delete>
	
	<select id="comtncntcinsttDAO.selectComtncntcinstt_S" resultMap="comtncntcinstt">
		<![CDATA[
			SELECT
				instt_id
				, instt_nm
				, frst_register_id
				, last_updusr_id
				, frst_regist_pnttm
				, last_updt_pnttm
				, use_at
			FROM comtncntcinstt
			WHERE instt_id = #insttId#
		]]>
	</select>
	
	<select id="comtncntcinsttDAO.selectComtncntcinsttList_D" parameterClass="ComtncntcinsttVO" resultClass="egovMap">
			SELECT
								instt_id
								, instt_nm
								, frst_register_id
								, last_updusr_id
								, frst_regist_pnttm
								, last_updt_pnttm
								, use_at
					FROM comtncntcinstt
			WHERE 1=1
			<isEqual prepend="AND" property="searchCondition" compareValue="0">
				instt_id = #searchKeyword#
			</isEqual>
			<isEqual prepend="AND" property="searchCondition" compareValue="1">
				instt_nm LIKE CONCAT('%',#searchKeyword#,'%')
			</isEqual>
				ORDER BY 
							instt_id DESC
					limit #firstIndex#, #recordCountPerPage#	
	</select>

	<select id="comtncntcinsttDAO.selectComtncntcinsttListTotCnt_S" parameterClass="ComtncntcinsttVO" resultClass="int">
			SELECT COUNT(*) totcnt
			FROM comtncntcinstt
			WHERE 1=1
			<isEqual prepend="AND" property="searchCondition" compareValue="0">
				instt_id = #searchKeyword#
			</isEqual>
			<isEqual prepend="AND" property="searchCondition" compareValue="1">
				instt_nm LIKE CONCAT('%',#searchKeyword#,'%')
			</isEqual>
	</select>

</sqlMap>
