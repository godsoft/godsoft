<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN" "http://www.ibatis.com/dtd/sql-map-2.dtd">

<sqlMap namespace="Comtnloginscrinimage">
	
	<typeAlias  alias="egovMap" type="egovframework.rte.psl.dataaccess.util.EgovMap"/>
	<typeAlias  alias="ComtnloginscrinimageVO" type="kr.godsoft.egovframe.generatorwebapp.comtnloginscrinimage.service.ComtnloginscrinimageVO"/>
	
	<resultMap id="comtnloginscrinimage" class="kr.godsoft.egovframe.generatorwebapp.comtnloginscrinimage.service.ComtnloginscrinimageVO">
		<result property="imageId" column="image_id" columnIndex="1"/>
		<result property="imageNm" column="image_nm" columnIndex="2"/>
		<result property="reflctAt" column="reflct_at" columnIndex="3"/>
		<result property="image" column="image" columnIndex="4"/>
		<result property="imageDc" column="image_dc" columnIndex="5"/>
		<result property="frstRegisterId" column="frst_register_id" columnIndex="6"/>
		<result property="frstRegistPnttm" column="frst_regist_pnttm" columnIndex="7"/>
		<result property="lastUpdusrId" column="last_updusr_id" columnIndex="8"/>
		<result property="lastUpdtPnttm" column="last_updt_pnttm" columnIndex="9"/>
		<result property="imageFile" column="image_file" columnIndex="10"/>
	</resultMap>
	
	<insert id="comtnloginscrinimageDAO.insertComtnloginscrinimage_S">
		<![CDATA[
            INSERT INTO comtnloginscrinimage (
                image_id
                , image_nm
                , reflct_at
                , image
                , image_dc
                , frst_register_id
                , frst_regist_pnttm
                , image_file
            ) VALUES (
                #imageId#
                , #imageNm#
                , #reflctAt#
                , #image#
                , #imageDc#
                , #frstRegisterId#
                , SYSDATE()
                , #imageFile#
            )
		]]>
	</insert>
	
	<update id="comtnloginscrinimageDAO.updateComtnloginscrinimage_S">
		<![CDATA[
            UPDATE comtnloginscrinimage
                SET
                image_id = #imageId#
                , image_nm = #imageNm#
                , reflct_at = #reflctAt#
                , image = #image#
                , image_dc = #imageDc#
                , last_updusr_id = #lastUpdusrId#
                , last_updt_pnttm = SYSDATE()
                , image_file = #imageFile#
                WHERE 1 = 1
                AND image_id = #imageId#
		]]>
	</update>
	
	<delete id="comtnloginscrinimageDAO.deleteComtnloginscrinimage_S">
		<![CDATA[
			DELETE FROM comtnloginscrinimage
				WHERE 1 = 1
				AND image_id = #imageId#
		]]>
	</delete>
	
	<select id="comtnloginscrinimageDAO.selectComtnloginscrinimage_S" resultMap="comtnloginscrinimage">
		<![CDATA[
			SELECT
				image_id
				, image_nm
				, reflct_at
				, image
				, image_dc
				, frst_register_id
				, frst_regist_pnttm
				, last_updusr_id
				, last_updt_pnttm
				, image_file
			FROM comtnloginscrinimage
			WHERE image_id = #imageId#
		]]>
	</select>
	
	<select id="comtnloginscrinimageDAO.selectComtnloginscrinimageList_D" parameterClass="ComtnloginscrinimageVO" resultClass="egovMap">
			SELECT
								image_id
								, image_nm
								, reflct_at
								, image
								, image_dc
								, frst_register_id
								, frst_regist_pnttm
								, last_updusr_id
								, last_updt_pnttm
								, image_file
					FROM comtnloginscrinimage
			WHERE 1=1
			<isEqual prepend="AND" property="searchCondition" compareValue="0">
				image_id = #searchKeyword#
			</isEqual>
			<isEqual prepend="AND" property="searchCondition" compareValue="1">
				image_nm LIKE CONCAT('%',#searchKeyword#,'%')
			</isEqual>
				ORDER BY 
							image_id DESC
					limit #firstIndex#, #recordCountPerPage#	
	</select>

	<select id="comtnloginscrinimageDAO.selectComtnloginscrinimageListTotCnt_S" parameterClass="ComtnloginscrinimageVO" resultClass="int">
			SELECT COUNT(*) totcnt
			FROM comtnloginscrinimage
			WHERE 1=1
			<isEqual prepend="AND" property="searchCondition" compareValue="0">
				image_id = #searchKeyword#
			</isEqual>
			<isEqual prepend="AND" property="searchCondition" compareValue="1">
				image_nm LIKE CONCAT('%',#searchKeyword#,'%')
			</isEqual>
	</select>

</sqlMap>
