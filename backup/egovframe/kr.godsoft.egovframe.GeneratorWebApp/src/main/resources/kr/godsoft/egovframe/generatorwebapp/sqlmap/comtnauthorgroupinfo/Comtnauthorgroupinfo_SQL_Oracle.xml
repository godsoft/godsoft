<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN" "http://www.ibatis.com/dtd/sql-map-2.dtd">

<sqlMap namespace="Comtnauthorgroupinfo">
	
	<typeAlias  alias="egovMap" type="egovframework.rte.psl.dataaccess.util.EgovMap"/>
	<typeAlias  alias="ComtnauthorgroupinfoVO" type="kr.godsoft.egovframe.generatorwebapp.comtnauthorgroupinfo.service.ComtnauthorgroupinfoVO"/>
	
	<resultMap id="comtnauthorgroupinfo" class="kr.godsoft.egovframe.generatorwebapp.comtnauthorgroupinfo.service.ComtnauthorgroupinfoVO">
		<result property="groupId" column="group_id" columnIndex="1"/>
		<result property="groupNm" column="group_nm" columnIndex="2"/>
		<result property="groupCreatDe" column="group_creat_de" columnIndex="3"/>
		<result property="groupDc" column="group_dc" columnIndex="4"/>
	</resultMap>
	
	<insert id="comtnauthorgroupinfoDAO.insertComtnauthorgroupinfo_S">
		<![CDATA[
            INSERT INTO comtnauthorgroupinfo (
                group_id
                , group_nm
                , group_creat_de
                , group_dc
            ) VALUES (
                #groupId#
                , #groupNm#
                , #groupCreatDe#
                , #groupDc#
            )
		]]>
	</insert>
	
	<update id="comtnauthorgroupinfoDAO.updateComtnauthorgroupinfo_S">
		<![CDATA[
            UPDATE comtnauthorgroupinfo
                SET
                group_id = #groupId#
                , group_nm = #groupNm#
                , group_creat_de = #groupCreatDe#
                , group_dc = #groupDc#
                WHERE 1 = 1
                AND group_id = #groupId#
		]]>
	</update>
	
	<delete id="comtnauthorgroupinfoDAO.deleteComtnauthorgroupinfo_S">
		<![CDATA[
			DELETE FROM comtnauthorgroupinfo
				WHERE 1 = 1
				AND group_id = #groupId#
		]]>
	</delete>
	
	<select id="comtnauthorgroupinfoDAO.selectComtnauthorgroupinfo_S" resultMap="comtnauthorgroupinfo">
		<![CDATA[
			SELECT
				group_id
				, group_nm
				, group_creat_de
				, group_dc
			FROM COMTNAUTHORGROUPINFO
			WHERE group_id = #groupId#
		]]>
	</select>
	
	<select id="comtnauthorgroupinfoDAO.selectComtnauthorgroupinfoList_D" parameterClass="ComtnauthorgroupinfoVO" resultClass="egovMap">
	       SELECT 
								A.GROUP_ID
								, A.GROUP_NM
								, A.GROUP_CREAT_DE
								, A.GROUP_DC
			       FROM
            (
				SELECT
								GROUP_ID
								, GROUP_NM
								, GROUP_CREAT_DE
								, GROUP_DC
							, ROWNUM
				FROM COMTNAUTHORGROUPINFO
				WHERE 1=1
				<isEqual prepend="AND" property="searchCondition" compareValue="0">
					GROUP_ID = #searchKeyword#
				</isEqual>
					<isEqual prepend="AND" property="searchCondition" compareValue="1">
					GROUP_NM LIKE '%' || #searchKeyword# || '%'
				</isEqual>
						ORDER BY 
							GROUP_ID DESC
					) A
			WHERE ROWNUM BETWEEN #firstIndex# AND #recordCountPerPage#
	</select>

	<select id="comtnauthorgroupinfoDAO.selectComtnauthorgroupinfoListTotCnt_S" parameterClass="ComtnauthorgroupinfoVO" resultClass="int">
			SELECT COUNT(*) totcnt
			FROM COMTNAUTHORGROUPINFO
			WHERE 1=1
			<isEqual prepend="AND" property="searchCondition" compareValue="0">
				GROUP_ID = #searchKeyword#
			</isEqual>
				<isEqual prepend="AND" property="searchCondition" compareValue="1">
				GROUP_NM LIKE '%' || #searchKeyword# || '%'
			</isEqual>
		</select>

</sqlMap>
