<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN" "http://www.ibatis.com/dtd/sql-map-2.dtd">

<sqlMap namespace="Comtsweblogsummary">
	
	<typeAlias  alias="egovMap" type="egovframework.rte.psl.dataaccess.util.EgovMap"/>
	<typeAlias  alias="ComtsweblogsummaryVO" type="kr.godsoft.egovframe.generatorwebapp.comtsweblogsummary.service.ComtsweblogsummaryVO"/>
	
	<resultMap id="comtsweblogsummary" class="kr.godsoft.egovframe.generatorwebapp.comtsweblogsummary.service.ComtsweblogsummaryVO">
		<result property="occrrncDe" column="occrrnc_de" columnIndex="1"/>
		<result property="url" column="url" columnIndex="2"/>
		<result property="rdcnt" column="rdcnt" columnIndex="3"/>
	</resultMap>
	
	<insert id="comtsweblogsummaryDAO.insertComtsweblogsummary_S">
		<![CDATA[
            INSERT INTO comtsweblogsummary (
                occrrnc_de
                , url
                , rdcnt
            ) VALUES (
                #occrrncDe#
                , #url#
                , #rdcnt#
            )
		]]>
	</insert>
	
	<update id="comtsweblogsummaryDAO.updateComtsweblogsummary_S">
		<![CDATA[
            UPDATE comtsweblogsummary
                SET
                occrrnc_de = #occrrncDe#
                , url = #url#
                , rdcnt = #rdcnt#
                WHERE 1 = 1
                AND occrrnc_de = #occrrncDe#
                AND url = #url#
		]]>
	</update>
	
	<delete id="comtsweblogsummaryDAO.deleteComtsweblogsummary_S">
		<![CDATA[
			DELETE FROM comtsweblogsummary
				WHERE 1 = 1
				AND occrrnc_de = #occrrncDe#
				AND url = #url#
		]]>
	</delete>
	
	<select id="comtsweblogsummaryDAO.selectComtsweblogsummary_S" resultMap="comtsweblogsummary">
		<![CDATA[
			SELECT
				occrrnc_de
				, url
				, rdcnt
			FROM COMTSWEBLOGSUMMARY
			WHERE occrrnc_de = #occrrncDe#
				AND url = #url#
		]]>
	</select>
	
	<select id="comtsweblogsummaryDAO.selectComtsweblogsummaryList_D" parameterClass="ComtsweblogsummaryVO" resultClass="egovMap">
	       SELECT 
								A.OCCRRNC_DE
								, A.URL
								, A.RDCNT
			       FROM
            (
				SELECT
								OCCRRNC_DE
								, URL
								, RDCNT
							, ROWNUM
				FROM COMTSWEBLOGSUMMARY
				WHERE 1=1
				<isEqual prepend="AND" property="searchCondition" compareValue="0">
					OCCRRNC_DE = #searchKeyword#
				</isEqual>
					<isEqual prepend="AND" property="searchCondition" compareValue="1">
					URL LIKE '%' || #searchKeyword# || '%'
				</isEqual>
						ORDER BY 
							OCCRRNC_DE DESC
							, URL DESC
					) A
			WHERE ROWNUM BETWEEN #firstIndex# AND #recordCountPerPage#
	</select>

	<select id="comtsweblogsummaryDAO.selectComtsweblogsummaryListTotCnt_S" parameterClass="ComtsweblogsummaryVO" resultClass="int">
			SELECT COUNT(*) totcnt
			FROM COMTSWEBLOGSUMMARY
			WHERE 1=1
			<isEqual prepend="AND" property="searchCondition" compareValue="0">
				OCCRRNC_DE = #searchKeyword#
			</isEqual>
				<isEqual prepend="AND" property="searchCondition" compareValue="1">
				URL LIKE '%' || #searchKeyword# || '%'
			</isEqual>
		</select>

</sqlMap>
