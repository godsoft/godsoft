<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN" "http://www.ibatis.com/dtd/sql-map-2.dtd">

<sqlMap namespace="Comtnbndtmanage">
	
	<typeAlias  alias="egovMap" type="egovframework.rte.psl.dataaccess.util.EgovMap"/>
	<typeAlias  alias="ComtnbndtmanageVO" type="kr.godsoft.egovframe.generatorwebapp.comtnbndtmanage.service.ComtnbndtmanageVO"/>
	
	<resultMap id="comtnbndtmanage" class="kr.godsoft.egovframe.generatorwebapp.comtnbndtmanage.service.ComtnbndtmanageVO">
		<result property="bndtId" column="bndt_id" columnIndex="1"/>
		<result property="bndtDe" column="bndt_de" columnIndex="2"/>
		<result property="rm" column="rm" columnIndex="3"/>
		<result property="frstRegisterId" column="frst_register_id" columnIndex="4"/>
		<result property="frstRegistPnttm" column="frst_regist_pnttm" columnIndex="5"/>
		<result property="lastUpdusrId" column="last_updusr_id" columnIndex="6"/>
		<result property="lastUpdtPnttm" column="last_updt_pnttm" columnIndex="7"/>
	</resultMap>
	
	<insert id="comtnbndtmanageDAO.insertComtnbndtmanage_S">
		<![CDATA[
            INSERT INTO comtnbndtmanage (
                bndt_id
                , bndt_de
                , rm
                , frst_register_id
                , frst_regist_pnttm
            ) VALUES (
                #bndtId#
                , #bndtDe#
                , #rm#
                , #frstRegisterId#
                , SYSDATE()
            )
		]]>
	</insert>
	
	<update id="comtnbndtmanageDAO.updateComtnbndtmanage_S">
		<![CDATA[
            UPDATE comtnbndtmanage
                SET
                bndt_id = #bndtId#
                , bndt_de = #bndtDe#
                , rm = #rm#
                , last_updusr_id = #lastUpdusrId#
                , last_updt_pnttm = SYSDATE()
                WHERE 1 = 1
                AND bndt_id = #bndtId#
                AND bndt_de = #bndtDe#
		]]>
	</update>
	
	<delete id="comtnbndtmanageDAO.deleteComtnbndtmanage_S">
		<![CDATA[
			DELETE FROM comtnbndtmanage
				WHERE 1 = 1
				AND bndt_id = #bndtId#
				AND bndt_de = #bndtDe#
		]]>
	</delete>
	
	<select id="comtnbndtmanageDAO.selectComtnbndtmanage_S" resultMap="comtnbndtmanage">
		<![CDATA[
			SELECT
				bndt_id
				, bndt_de
				, rm
				, frst_register_id
				, frst_regist_pnttm
				, last_updusr_id
				, last_updt_pnttm
			FROM comtnbndtmanage
			WHERE bndt_id = #bndtId#
				AND bndt_de = #bndtDe#
		]]>
	</select>
	
	<select id="comtnbndtmanageDAO.selectComtnbndtmanageList_D" parameterClass="ComtnbndtmanageVO" resultClass="egovMap">
			SELECT
								bndt_id
								, bndt_de
								, rm
								, frst_register_id
								, frst_regist_pnttm
								, last_updusr_id
								, last_updt_pnttm
					FROM comtnbndtmanage
			WHERE 1=1
			<isEqual prepend="AND" property="searchCondition" compareValue="0">
				bndt_id = #searchKeyword#
			</isEqual>
			<isEqual prepend="AND" property="searchCondition" compareValue="1">
				bndt_de LIKE CONCAT('%',#searchKeyword#,'%')
			</isEqual>
				ORDER BY 
							bndt_id DESC
							, bndt_de DESC
					limit #firstIndex#, #recordCountPerPage#	
	</select>

	<select id="comtnbndtmanageDAO.selectComtnbndtmanageListTotCnt_S" parameterClass="ComtnbndtmanageVO" resultClass="int">
			SELECT COUNT(*) totcnt
			FROM comtnbndtmanage
			WHERE 1=1
			<isEqual prepend="AND" property="searchCondition" compareValue="0">
				bndt_id = #searchKeyword#
			</isEqual>
			<isEqual prepend="AND" property="searchCondition" compareValue="1">
				bndt_de LIKE CONCAT('%',#searchKeyword#,'%')
			</isEqual>
	</select>

</sqlMap>
