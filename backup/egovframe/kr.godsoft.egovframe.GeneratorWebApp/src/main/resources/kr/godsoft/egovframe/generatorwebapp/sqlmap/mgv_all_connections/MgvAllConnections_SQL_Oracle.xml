<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN" "http://www.ibatis.com/dtd/sql-map-2.dtd">

<sqlMap namespace="MgvAllConnections">
	
	<typeAlias  alias="egovMap" type="egovframework.rte.psl.dataaccess.util.EgovMap"/>
	<typeAlias  alias="MgvAllConnectionsVO" type="kr.godsoft.egovframe.generatorwebapp.mgv_all_connections.service.MgvAllConnectionsVO"/>
	
	<resultMap id="mgvAllConnections" class="kr.godsoft.egovframe.generatorwebapp.mgv_all_connections.service.MgvAllConnectionsVO">
		<result property="projectId" column="project_id" columnIndex="1"/>
		<result property="projectName" column="project_name" columnIndex="2"/>
		<result property="connectionId" column="connection_id" columnIndex="3"/>
		<result property="host" column="host" columnIndex="4"/>
		<result property="port" column="port" columnIndex="5"/>
		<result property="username" column="username" columnIndex="6"/>
		<result property="dburl" column="dburl" columnIndex="7"/>
	</resultMap>
	
	<insert id="mgvAllConnectionsDAO.insertMgvAllConnections_S">
		<![CDATA[
            INSERT INTO mgv_all_connections (
                project_id
                , project_name
                , connection_id
                , host
                , port
                , username
                , dburl
            ) VALUES (
                #projectId#
                , #projectName#
                , #connectionId#
                , #host#
                , #port#
                , #username#
                , #dburl#
            )
		]]>
	</insert>
	
	<update id="mgvAllConnectionsDAO.updateMgvAllConnections_S">
		<![CDATA[
            UPDATE mgv_all_connections
                SET
                project_id = #projectId#
                , project_name = #projectName#
                , connection_id = #connectionId#
                , host = #host#
                , port = #port#
                , username = #username#
                , dburl = #dburl#
                WHERE 1 = 1

		]]>
	</update>
	
	<delete id="mgvAllConnectionsDAO.deleteMgvAllConnections_S">
		<![CDATA[
			DELETE FROM mgv_all_connections
				WHERE 1 = 1
		]]>
	</delete>
	
	<select id="mgvAllConnectionsDAO.selectMgvAllConnections_S" resultMap="mgvAllConnections">
		<![CDATA[
			SELECT
				project_id
				, project_name
				, connection_id
				, host
				, port
				, username
				, dburl
			FROM MGV_ALL_CONNECTIONS
		]]>
	</select>
	
	<select id="mgvAllConnectionsDAO.selectMgvAllConnectionsList_D" parameterClass="MgvAllConnectionsVO" resultClass="egovMap">
	       SELECT 
								A.PROJECT_ID
								, A.PROJECT_NAME
								, A.CONNECTION_ID
								, A.HOST
								, A.PORT
								, A.USERNAME
								, A.DBURL
			       FROM
            (
				SELECT
								PROJECT_ID
								, PROJECT_NAME
								, CONNECTION_ID
								, HOST
								, PORT
								, USERNAME
								, DBURL
							, ROWNUM
				FROM MGV_ALL_CONNECTIONS
				WHERE 1=1
				<isEqual prepend="AND" property="searchCondition" compareValue="0">
					PROJECT_ID = #searchKeyword#
				</isEqual>
					<isEqual prepend="AND" property="searchCondition" compareValue="1">
					PROJECT_NAME LIKE '%' || #searchKeyword# || '%'
				</isEqual>
						ORDER BY 
					) A
			WHERE ROWNUM BETWEEN #firstIndex# AND #recordCountPerPage#
	</select>

	<select id="mgvAllConnectionsDAO.selectMgvAllConnectionsListTotCnt_S" parameterClass="MgvAllConnectionsVO" resultClass="int">
			SELECT COUNT(*) totcnt
			FROM MGV_ALL_CONNECTIONS
			WHERE 1=1
			<isEqual prepend="AND" property="searchCondition" compareValue="0">
				PROJECT_ID = #searchKeyword#
			</isEqual>
				<isEqual prepend="AND" property="searchCondition" compareValue="1">
				PROJECT_NAME LIKE '%' || #searchKeyword# || '%'
			</isEqual>
		</select>

</sqlMap>
