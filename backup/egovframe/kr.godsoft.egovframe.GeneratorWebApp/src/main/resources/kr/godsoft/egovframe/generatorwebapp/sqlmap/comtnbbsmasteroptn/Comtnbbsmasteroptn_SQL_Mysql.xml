	<resultMap id="comtnbbsmasteroptn" class="kr.godsoft.egovframe.generatorwebapp.comtnbbsmasteroptn.service.ComtnbbsmasteroptnVO">
		<result property="bbsId" column="bbs_id" columnIndex="1"/>
		<result property="answerAt" column="answer_at" columnIndex="2"/>
		<result property="stsfdgAt" column="stsfdg_at" columnIndex="3"/>
		<result property="frstRegistPnttm" column="frst_regist_pnttm" columnIndex="4"/>
		<result property="lastUpdtPnttm" column="last_updt_pnttm" columnIndex="5"/>
