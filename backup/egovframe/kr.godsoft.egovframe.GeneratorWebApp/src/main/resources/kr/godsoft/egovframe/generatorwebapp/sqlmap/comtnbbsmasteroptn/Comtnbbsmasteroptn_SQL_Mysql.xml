	</resultMap>
	
	<insert id="comtnbbsmasteroptnDAO.insertComtnbbsmasteroptn_S">
		<![CDATA[
            INSERT INTO comtnbbsmasteroptn (
                bbs_id
                , answer_at
                , stsfdg_at
                , frst_regist_pnttm
                , frst_register_id
            ) VALUES (
                #bbsId#
                , #answerAt#
                , #stsfdgAt#
                , SYSDATE()
                , #frstRegisterId#
            )
		]]>
	</insert>
	
	<update id="comtnbbsmasteroptnDAO.updateComtnbbsmasteroptn_S">
		<![CDATA[
            UPDATE comtnbbsmasteroptn
                SET
                bbs_id = #bbsId#
                , answer_at = #answerAt#
                , stsfdg_at = #stsfdgAt#
                , last_updt_pnttm = SYSDATE()
                , last_updusr_id = #lastUpdusrId#
                WHERE 1 = 1
                AND bbs_id = #bbsId#
		]]>
	</update>
	
	<delete id="comtnbbsmasteroptnDAO.deleteComtnbbsmasteroptn_S">
		<![CDATA[
			DELETE FROM comtnbbsmasteroptn
				WHERE 1 = 1
				AND bbs_id = #bbsId#
		]]>
	</delete>
	
	<select id="comtnbbsmasteroptnDAO.selectComtnbbsmasteroptn_S" resultMap="comtnbbsmasteroptn">
		<![CDATA[
			SELECT
				bbs_id
				, answer_at
				, stsfdg_at
				, frst_regist_pnttm
				, last_updt_pnttm
				, frst_register_id
				, last_updusr_id
			FROM comtnbbsmasteroptn
			WHERE bbs_id = #bbsId#
		]]>
	</select>
	
	<select id="comtnbbsmasteroptnDAO.selectComtnbbsmasteroptnList_D" parameterClass="ComtnbbsmasteroptnVO" resultClass="egovMap">
			SELECT
								bbs_id
								, answer_at
								, stsfdg_at
								, frst_regist_pnttm
								, last_updt_pnttm
								, frst_register_id
								, last_updusr_id
					FROM comtnbbsmasteroptn
			WHERE 1=1
			<isEqual prepend="AND" property="searchCondition" compareValue="0">
				bbs_id = #searchKeyword#
			</isEqual>
			<isEqual prepend="AND" property="searchCondition" compareValue="1">
				answer_at LIKE CONCAT('%',#searchKeyword#,'%')
			</isEqual>
				ORDER BY 
							bbs_id DESC
					limit #firstIndex#, #recordCountPerPage#	
	</select>

	<select id="comtnbbsmasteroptnDAO.selectComtnbbsmasteroptnListTotCnt_S" parameterClass="ComtnbbsmasteroptnVO" resultClass="int">
			SELECT COUNT(*) totcnt
			FROM comtnbbsmasteroptn
			WHERE 1=1
			<isEqual prepend="AND" property="searchCondition" compareValue="0">
				bbs_id = #searchKeyword#
			</isEqual>
			<isEqual prepend="AND" property="searchCondition" compareValue="1">
				answer_at LIKE CONCAT('%',#searchKeyword#,'%')
			</isEqual>
	</select>

