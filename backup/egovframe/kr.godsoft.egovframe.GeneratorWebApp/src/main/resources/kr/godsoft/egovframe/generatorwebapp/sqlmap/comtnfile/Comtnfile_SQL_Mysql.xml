<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN" "http://www.ibatis.com/dtd/sql-map-2.dtd">

<sqlMap namespace="Comtnfile">
	
	<typeAlias  alias="egovMap" type="egovframework.rte.psl.dataaccess.util.EgovMap"/>
	<typeAlias  alias="ComtnfileVO" type="kr.godsoft.egovframe.generatorwebapp.comtnfile.service.ComtnfileVO"/>
	
	<resultMap id="comtnfile" class="kr.godsoft.egovframe.generatorwebapp.comtnfile.service.ComtnfileVO">
		<result property="atchFileId" column="atch_file_id" columnIndex="1"/>
		<result property="creatDt" column="creat_dt" columnIndex="2"/>
		<result property="useAt" column="use_at" columnIndex="3"/>
	</resultMap>
	
	<insert id="comtnfileDAO.insertComtnfile_S">
		<![CDATA[
            INSERT INTO comtnfile (
                atch_file_id
                , creat_dt
                , use_at
            ) VALUES (
                #atchFileId#
                , #creatDt#
                , #useAt#
            )
		]]>
	</insert>
	
	<update id="comtnfileDAO.updateComtnfile_S">
		<![CDATA[
            UPDATE comtnfile
                SET
                atch_file_id = #atchFileId#
                , creat_dt = #creatDt#
                , use_at = #useAt#
                WHERE 1 = 1
                AND atch_file_id = #atchFileId#
		]]>
	</update>
	
	<delete id="comtnfileDAO.deleteComtnfile_S">
		<![CDATA[
			DELETE FROM comtnfile
				WHERE 1 = 1
				AND atch_file_id = #atchFileId#
		]]>
	</delete>
	
	<select id="comtnfileDAO.selectComtnfile_S" resultMap="comtnfile">
		<![CDATA[
			SELECT
				atch_file_id
				, creat_dt
				, use_at
			FROM comtnfile
			WHERE atch_file_id = #atchFileId#
		]]>
	</select>
	
	<select id="comtnfileDAO.selectComtnfileList_D" parameterClass="ComtnfileVO" resultClass="egovMap">
			SELECT
								atch_file_id
								, creat_dt
								, use_at
					FROM comtnfile
			WHERE 1=1
			<isEqual prepend="AND" property="searchCondition" compareValue="0">
				atch_file_id = #searchKeyword#
			</isEqual>
			<isEqual prepend="AND" property="searchCondition" compareValue="1">
				creat_dt LIKE CONCAT('%',#searchKeyword#,'%')
			</isEqual>
				ORDER BY 
							atch_file_id DESC
					limit #firstIndex#, #recordCountPerPage#	
	</select>

	<select id="comtnfileDAO.selectComtnfileListTotCnt_S" parameterClass="ComtnfileVO" resultClass="int">
			SELECT COUNT(*) totcnt
			FROM comtnfile
			WHERE 1=1
			<isEqual prepend="AND" property="searchCondition" compareValue="0">
				atch_file_id = #searchKeyword#
			</isEqual>
			<isEqual prepend="AND" property="searchCondition" compareValue="1">
				creat_dt LIKE CONCAT('%',#searchKeyword#,'%')
			</isEqual>
	</select>

</sqlMap>
